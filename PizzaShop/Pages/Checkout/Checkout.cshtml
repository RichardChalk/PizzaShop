@page
@model PizzaShop.Pages.Checkout.CheckoutModel
@{
}

<div class="text-center container">
    <div class="mainText">
        <h1 class="display-4 text-capitalize text-black">Your order</h1>
    </div>

@*Define which pizza image should be diplayed*@
@{ 
    var imagePath = "~/images/Pizzas/" + (Model.ImageTitle + ".png");
}

    <div class="col-3 mx-auto mb-5">
        <img src="@imagePath" class="w-100 mb-5 orderPizza-img" asp-append-version="true" />
        <p>Your @Model.PizzaName Pizza order is ready!</p>
        <p>Price: @Model.Price sek</p>
        <br />

        <a class="btn btn-primary mt-1 mx-auto" asp-page="ThankYou">Confirm order</a>
    </div>
</div>
