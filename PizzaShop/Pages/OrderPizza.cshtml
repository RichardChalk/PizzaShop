@page
@model PizzaShop.Pages.OrderPizzaModel
@{
}

<div class="text-center">
    <div class="mainText">
        <h1 class="display-4 text-capitalize text-black">Our Pizza selection</h1>
        <h2 class="mainSubTitle">Choose one of our pizzas <br /> or try our pizza builder</h2>
        <p class="smallText"><i>Only one pizza per order</i></p>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-12" mb-5 mt-5>
                <div class="w-100 row makeYourOwnDiv">
                    <div class="col-4">
                        <img src="~/images/Pizzas/Create.png" class="w-100"/>
                    </div>
                    <div class="col-8 align-items-center">
                        <div class="align-middle makeYourOwnText">
                            <h3>Create your own Pizza</h3>
                            <p>Using our patented pizza maker</p>
                            <a class="btn btn-primary" asp-page="Forms/CustomPizza">Try now</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


</div>