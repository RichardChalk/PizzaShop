@page
@model PizzaShop.Pages.Forms.CustomPizzaModel
@{
}

<div class="text-center container">
    <div class="mainText">
        <h1 class="display-4 text-capitalize text-black mt-5">Create your own pizza</h1>
        <h2 class="mainSubTitle">Choose ingredients and name your pizza</h2>
    </div>
</div>
    <form method="post" class="mx-auto mt-5 mb-5 px-5 pt-5 pb-5 rounded bg-light col-4">
        <input type="text" class="mb-3 w-100" asp-for="Pizza.PizzaName" placeholder="Give your pizza a name..." /> <br />
        <input type="checkbox" asp-for="Pizza.TomatoSauce" placeholder="Tomato Sauce..." /> Tomato Sauce <br />
        <input type="checkbox" asp-for="Pizza.Cheese" placeholder="Cheese..." /> Cheese <br />
        <input type="checkbox" asp-for="Pizza.Bullets" placeholder="Bullets..." /> Bullets <br />
        <input type="checkbox" asp-for="Pizza.Ham" placeholder="Ham..." /> Ham <br />
        <input type="checkbox" asp-for="Pizza.Mushroom" placeholder="Mushroom..." /> Mushroom <br />
        <input type="checkbox" asp-for="Pizza.Peperoni" placeholder="Peperoni..." /> Pepperoni <br />
        <input type="checkbox" asp-for="Pizza.Pineapple" placeholder="Pineapple..." /> Pineapple <br />
        <input type="checkbox" asp-for="Pizza.Tuna" placeholder="Tuna..." /> Tuna <br />
        <input type="checkbox" asp-for="Pizza.Beef" placeholder="Beef..." /> Beef <br />
        <button class="btn btn-primary mt-3" type="submit">Order my pizza</button>
    </form>

    